{
  "name": "allotmint",
  "version": "0.0.2",
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "concurrently": "^9.2.0",
    "postcss": "^8.5.6",
    "tsx": "^4.20.5"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "@capacitor/ios": "^5.7.0"
  },
  "scripts": {
    "test": "cd frontend && npm test --",
    "build:web": "cd frontend && ./build.sh",
    "mobile:add": "npx cap add android --config mobile/capacitor.config.ts && npx cap add ios --config mobile/capacitor.config.ts",
    "mobile:sync": "npm run build:web && npx cap sync --config mobile/capacitor.config.ts",
    "mobile:android": "npm run mobile:sync && npx cap open android --config mobile/capacitor.config.ts",
    "mobile:ios": "npm run mobile:sync && npx cap open ios --config mobile/capacitor.config.ts",
    "deploy:local:frontend": "bash scripts/deploy-local.sh -t frontend",
    "deploy:local:backend": "bash scripts/deploy-local.sh -t backend",
    "deploy:local:both": "bash scripts/deploy-local.sh -t both",
    "deploy:local:frontend:ps": "powershell -ExecutionPolicy Bypass -File scripts/deploy-local.ps1 -Target frontend",
    "deploy:local:backend:ps": "powershell -ExecutionPolicy Bypass -File scripts/deploy-local.ps1 -Target backend",
    "deploy:local:both:ps": "powershell -ExecutionPolicy Bypass -File scripts/deploy-local.ps1 -Target both",
    "smoke:test": "node node_modules/tsx/dist/cli.mjs scripts/frontend-backend-smoke.ts",
    "smoke:test:all": "node node_modules/tsx/dist/cli.mjs scripts/smoke-all.ts"
  }
}
